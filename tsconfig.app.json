{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.tsx",
    "**/*.vue", "bin/index.js", "bin/index.js", "build/index.js", "build/index.js",
  ],
  "exclude": [
    "playground/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@utils/*": [
        "./utils/*"
      ],
      "@ui/*": [
        "./packages/*"
      ],
      "@shared/*": [
        "./shared/*"
      ],
      "@style/*": [
        "./style/*"
      ],
      "@com/*": [
        "./playground/components/*"
      ],
      "@/*": [
        "playground/*"
      ]
    }
  }
}
